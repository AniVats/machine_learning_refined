# get your ip address of pi --> might require nmap
192.168.1.8

# ssh into server, update base password
ssh ubuntu@192.168.1.8

# host --> remove old host fingerprint from ~/.ssh/known_hosts
ssh-keygen -R 192.168.1.22

# generate new ssh public / private key pair for server
ssh-keygen -t rsa -b 4096 -C "jermwatt@gmail.com"

# push public key to server
ssh-copy-id ubuntu@192.168.1.22